# Revolutionary Inventory System - Environment Configuration

# 🌍 Application Environment
NODE_ENV=development
PORT=5000

# 🗄️ Database Configuration
MONGODB_URI=mongodb://localhost:27017/revolutionary_inventory

# 🔐 Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_characters
BCRYPT_ROUNDS=12

# 🌐 CORS Configuration (comma-separated URLs for production)
FRONTEND_URL=http://localhost:3000,http://localhost:5173

# 📝 Logging Configuration
LOG_LEVEL=info

# 🏢 Default Facility Settings
DEFAULT_FACILITY_TYPE=warehouse
DEFAULT_STOCK_THRESHOLD=10

# 📧 Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# 🔔 Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# 📊 Analytics Configuration
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=365

# 🚀 Performance Settings
API_RATE_LIMIT=1000
MAX_REQUEST_SIZE=10mb

# 🔧 Feature Flags (Global Overrides)
GLOBAL_EXPIRY_TRACKING=true
GLOBAL_TEMPERATURE_MONITORING=true
GLOBAL_ADVANCED_ANALYTICS=false

# 🧪 Development Settings
ENABLE_DEBUG_LOGS=true
ENABLE_API_DOCS=true
MOCK_DATA_GENERATION=false
